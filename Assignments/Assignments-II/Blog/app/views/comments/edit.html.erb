<h1>Edit Comment</h1>
<div class="col-md-8 col-md-offset-2">
  <div class="message-show">
	<%= form_for([@post, @comment]) do |f| %>
	  <p>
	    <%= f.label :content %><br>
	    <%= f.text_area :content %>
	  </p>
	  <div class="field">
	    <% tags = get_tags %>
	      <% tags.each do |tag| %>          
	        <input type="checkbox" value=<%= tag.id %> name="comment[tag_ids][]" />
	        <label for="tag_list"><%= tag.name %></label>
	      <% end %>
	  </div>
	  <%= f.button :submit %>
	<% end %>
	</div>
</div>