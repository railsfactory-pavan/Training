
<div class="container">

  <div class="row">
    <div class="col-md-4">
      <strong>Line 1:</strong>
      <%= address.line1 %>
    </div>
    <div class="col-md-4">
      <strong>Line 2:</strong>
      <%= address.line2 %>
    </div>
    <div class="col-md-4">
      <strong>Line 3:</strong>
      <%= address.line3 %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <strong>City:</strong>
      <%= address.city %>
    </div>
    <div class="col-md-4">
      <strong>State:</strong>
      <%= address.state %>
    </div>
    <div class="col-md-4">
      <strong>Country:</strong>
      <%= address.country %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <strong>Postal Code:</strong>
      <%= address.postal_code %>
    </div>
    <div class="col-md-4">
      <strong>Contact No:</strong>
      <%= address.contact_no %>
    </div>
    <div class="col-md-4">
      <strong>Email:</strong>
      <%= address.email %>
    </div>
  </div>

</div>
<hr>