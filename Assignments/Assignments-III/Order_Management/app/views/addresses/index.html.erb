<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Line1</th>
      <th>Line2</th>
      <th>Line3</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Postal code</th>
      <th>Contact no</th>
      <th>Email</th>
      <th>User</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.line1 %></td>
        <td><%= address.line2 %></td>
        <td><%= address.line3 %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.country %></td>
        <td><%= address.postal_code %></td>
        <td><%= address.contact_no %></td>
        <td><%= address.email %></td>
        <td><%= address.user_id %></td>
        <td><%= link_to 'Show', address, class: "btn btn-sm btn-info" %></td>
       
        <td><%= link_to 'Destroy', address, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


