<p id="notice"><%= notice %></p>

<h1>Orders</h1>
<%= link_to 'New Order', new_order_path, class: "btn btn-success" %>
<hr>
<table class="table">
  <thead>
    <tr>
      <th>Order no</th>
      <th>Is express delivery</th>
      <th>Is custommer pickup</th>
      <th>Delivery date</th>
      <th>Order currency</th>
      <th>Order price</th>
      <th>Special instruction</th>
      <th>User</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_no %></td>
        <td><%= order.is_express_delivery %></td>
        <td><%= order.is_custommer_Pickup %></td>
        <td><%= order.delivery_date %></td>
        <td><%= order.order_currency %></td>
        <td><%= order.order_price %></td>
        <td><%= order.special_instruction %></td>
        <td><%= order.user.first_name %></td>
        <td><%= order.address.line1 %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


