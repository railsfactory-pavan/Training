<fieldset>


  <div class="row">
    <div class="col-md-4">
      <div class="col-md-4"><%= f.label :line1, class: "required" %></div>
      <div class="col-md-6"><%= f.text_field :line1, id: :address_line1, :required => true %></div>
    </div>
    <div class="col-md-4">
      <div class="col-md-4"><%= f.label :line2 %></div>
      <div class="col-md-6"><%= f.text_field :line2, id: :address_line2 %></div>
    </div>
    <div class="col-md-4">
      <div class="col-md-4"><%= f.label :line3 %></div>
      <div class="col-md-6"><%= f.text_field :line3, id: :address_line3 %></div>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="col-md-4">
      <div class="col-md-4"><%= f.label :city, class: "required" %></div>
      <div class="col-md-6"><%= f.text_field :city, id: :address_city, :required => true %></div>
    </div>
    <div class="col-md-4">
      <div class="col-md-4"><%= f.label :state, class: "required" %></div>
     <div class="col-md-6"><%= f.text_field :state, id: :address_state, :required => true %></div>
    </div>
    <div class="col-md-4">
      <div class="col-md-4"><%= f.label :country, class: "required" %></div>
      <div class="col-md-6"><%= f.text_field :country, id: :address_country, :required => true %></div>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="col-md-4">
      <div class="col-md-4"><%= f.label :postal_code %></div>
      <div class="col-md-6"><%= f.number_field :postal_code, id: :address_postal_code %></div>
    </div>
    <div class="col-md-4">
      <div class="col-md-4"><%= f.label :contact_no, class: "required" %></div>
      <div class="col-md-6"><%= f.number_field :contact_no, id: :address_contact_no, :required => true %></div>
    </div>
    <div class="col-md-4">
      <div class="col-md-4"><%= f.label :email %></div>
      <div class="col-md-6"><%= f.email_field :email, id: :address_email %></div>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="col-md-4">
      <%= f.hidden_field :_destroy %>
      <a class="btn  remove_fields" href="#"><span class="glyphicon glyphicon-trash"  ></span></a>
    </div>
  </div> 
  <hr>
</fieldset>
