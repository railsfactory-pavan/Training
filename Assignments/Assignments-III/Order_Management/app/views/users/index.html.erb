<p id="notice"><%= notice %></p>

<h1>Users</h1>
<%= link_to 'New User', new_user_path, class: "btn btn-success" %>
<script>
  $(document).ready(function(){
      $('.search').on('keyup',function(){
          var searchTerm = $(this).val().toLowerCase();
          $('#userTbl tbody tr').each(function(){
              var lineStr = $(this).text().toLowerCase();
              if(lineStr.indexOf(searchTerm) === -1){
                  $(this).hide();
              }else{
                  $(this).show();
              }
          });
      });
  });
</script>
<div class="form-group pull-right">
    <input type="text" class="search form-control" placeholder="Search Users">
</div>
<hr>
<table class="table table-striped table-hover" id="userTbl">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Birtday</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.birtday %></td>
        <td><%= link_to content_tag(:span, "",:class => "glyphicon glyphicon-zoom-in"), user %></td>
        <td><%= link_to content_tag(:span, "",:class => "glyphicon glyphicon-pencil", :style =>"color:blue"), edit_user_path(user) %></td>
        <td><%= link_to content_tag(:span, "",:class => "glyphicon glyphicon-trash", :style =>"color:red"), user,  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>



