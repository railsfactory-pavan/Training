
<h1><span class="label label-default">Show Todo</span></h1>

<ul class="nav nav-tabs" role="tablist">
  <li><%= link_to 'View list', user_todos_path(@user)   %></li>
  <li><%= link_to 'New todo', new_user_todo_path(@user)  %></li>
  <li class="active"><%= link_to 'Show', [@user,@todo]  %></li>
</ul>
<p id="notice"><%= notice %></p>
<p>
  <strong>Title:</strong>
  <%= @todo.title %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @todo.notes %>
</p>

<%= link_to 'Edit', edit_user_todo_path(@user,@todo) , class: 'btn btn-info' %> |
<%= link_to 'Back', user_todos_path(@user) , class: 'btn btn-success' %>
