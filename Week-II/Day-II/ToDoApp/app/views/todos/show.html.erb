
<h1><span class="label label-default">Show Todo</span></h1>

<ul class="nav nav-tabs" role="tablist">
  <li><%= link_to 'View list', todos_path   %></li>
  <li><%= link_to 'New todo', new_todo_path  %></li>
  <li class="active"><%= link_to 'Show', @todo  %></li>
</ul>
<p id="notice"><%= notice %></p>
<p>
  <strong>Title:</strong>
  <%= @todo.title %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @todo.notes %>
</p>

<%= link_to 'Edit', edit_todo_path(@todo) , class: 'btn btn-info' %> |
<%= link_to 'Back', todos_path , class: 'btn btn-success' %>
